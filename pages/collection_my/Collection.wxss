#box{
	width:90%;
	margin:0 auto;
	margin-left:5%;
	display: flex;
	justify-content: space-between;
	flex-direction: column;
	flex-wrap:wrap;
}

.text-boxs{
  display: flex;
  width: 100%;
  margin-top: 20px;
  position: relative;
  border-bottom:1px solid #f0f0f0;
  padding-bottom:15px;

}
.box-left{
  float:left;
  width:35%;
}

.text-boxs image{
	float:left;
	width:100%;
}

.box-right{
  float:left;
  width:50%;
  margin-left:3%;
  position: relative;
}

.text-boxs .font-wei-p{
  float:left;
  font-family: 微软雅黑;
  width: 100%;
  font-size:0.75em;
  margin-top: -2px;

}

.text-boxs .text-p-box{
	margin-top: 5px;
	display: flex;
	justify-content: space-between;
	width: 100%;
	height: 20px;
	line-height: 20px;
}

.text-boxs .text-p-box strong{
 font-family: 微软雅黑;
 color: #999999;
 font-size:26rpx;
 margin-top:8px;
}

.text-boxs .dolep{
 float:left;
 display: flex;
 flex-direction: row;
 justify-content: space-between;
 width:100%;
 position: absolute;
 bottom:0;
 margin-bottom:-2px;
}

.text-boxs .manei{
  display: flex;
  color: #f9c00d;
  font-size:28rpx;
  font-family: 微软雅黑;
}

.text-boxs .length{
  display: flex;
  color: #999;
  font-size:28rpx;
  font-family: 微软雅黑;
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis;/*文字隐藏后添加省略号*/
  animation: nowrap;/*强制不换行*/
}

.target{
  float:left;
}

.untils{
 position: absolute;
 z-index: 99;
 right:0;
 top: 0;
 width:6%;
 margin-top: 25px;
}

.untils image{
  float:left;
  width:100%;
}

.disn{
  display: none;
}


@media screen and (min-width: 640px) {
  .text-boxs .text-p-box strong{
   margin-top:20px;
 }

 .untils{
 margin-top: 65px;
}
}